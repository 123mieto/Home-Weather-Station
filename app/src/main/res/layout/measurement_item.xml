<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="18dp"
    android:background="@drawable/measurement_item_boarder"
    android:padding="18dp"
    tools:background="#F4F4F4">

    <TextView
        android:id="@+id/meas_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textColor="@color/primary_text"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="POMIAR" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/meas_item"
        android:layout_height="wrap_content"
        android:layout_below="@id/meas_item_name"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="TIME"
                android:textColor="@color/secondary_text"
                android:layout_marginRight="10dp"
                android:id="@+id/height_label"/>

            <TextView
                android:id="@+id/meas_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textColor="@color/secondary_text"
                tools:text="10" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="TEMP"
                android:layout_marginRight="10dp"
                android:textColor="@color/secondary_text"
                android:id="@+id/temp_label" />

            <TextView
                android:id="@+id/meas_item_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text"
                tools:text="23" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/meas_item_lay"
        android:layout_below="@id/meas_item"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textColor="@color/secondary_text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="NUMBER"
                android:id="@+id/hair_color_label" />

            <TextView
                android:id="@+id/meas_item_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text"
                tools:text="3" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="DATE"
                android:layout_marginRight="10dp"
                android:textColor="@color/secondary_text"
                android:id="@+id/date_label" />

            <TextView
                android:id="@+id/meas_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text"
                tools:text="10.10.16" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>