<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyToolbarStyle</item>

        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:windowBackground">@color/icons</item>
        <item name="android:text">@color/icons</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/icons</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:divider">@color/divider</item>
        <item name="colorControlNormal">@color/icons</item>
    </style>

    <style name="MyToolbarStyle">
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:background">@color/primary</item>
        <item name="android:windowBackground">@color/primary_light</item>
        <item name="android:text">@color/icons</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/icons</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:divider">@color/divider</item>
        <item name="colorControlNormal">@color/icons</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="TabWidgetTheme" parent="MyToolbarStyle">
        <item name="android:textColorSecondary">@color/primary_light</item>
    </style>
</resources>
